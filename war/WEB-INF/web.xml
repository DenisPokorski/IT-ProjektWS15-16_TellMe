<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>EditorService</servlet-name>
    <servlet-class>de.hdm.tellme.server.EditorServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>EditorService</servlet-name>
    <url-pattern>/tellme/editorservice</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>ReportService</servlet-name>
    <servlet-class>de.hdm.tellme.server.ReportServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ReportService</servlet-name>
    <url-pattern>/tellme/reportservice</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>LoginService</servlet-name>
    <servlet-class>de.hdm.tellme.server.LoginServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>LoginService</servlet-name>
    <url-pattern>/tellme/loginservice</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>TellMe.html</welcome-file>
        <welcome-file>TellMeReport.html</welcome-file>
    
  </welcome-file-list>

</web-app>
